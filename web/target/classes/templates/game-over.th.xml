<thlogic>
    <attr sel="#headId"
          th:replace="~{fragments/head :: headFragment}"/>
    <attr sel="#finish-title"
          th:text="#{game.finish.title}"/>
    <attr sel="#game-title"
          th:text="#{game.title}"/>
    <attr sel="#finishText"
          th:text="#{game.finish.text}"/>
    <attr sel="#resultMessage"
          th:text="${resultMessage}"/>
    <attr sel="#playRestart"
          th:href="restart" th:text="#{game.again}"/>
    <attr sel="#homeReturn"
          th:href="home" th:text="#{game.home}"/>
    <attr sel="#footerId"
          th:replace="~{fragments/footer :: footerFragment}"/>
</thlogic>